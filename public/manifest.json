{
  "manifest_version": 3,
  "name": "React Vite Chrome Extension",
  "version": "1.0",
  "description": "Simple Chrome extension built with React and Vite",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage","scripting", "activeTab"],
  "host_permissions": [
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "32": "meta.png"
    
  }
}
